{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
<div class="m-5">
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ offre.title }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ offre.city ? offre.city|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ offre.state }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ offre.ZipCode}}</td>
            </tr>

            <tr>
                <th>Compensation</th>
                <td>{{ offre.compensation }}</td>
            </tr>
            <tr>
                <th >Availability</th>
                <td>{{ offre.availability }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ offre.details }}</td>
            </tr>
        </tbody>
    </table>
     {% if is_granted('ROLE_USER')%}

      {% include "/postuler/new.html.twig" %}
      {% endif %}
    <a class="btn btn-secondary mt-2" href="{{ path('app_offre_index') }}" >Back</a>
{% if is_granted('ROLE_ADMIN')%}
    <a class="btn btn-info mt-2" href="{{ path('app_offre_edit', {'id': offre.id}) }}" >Edit</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endif %}
</div>
{% endblock %}
